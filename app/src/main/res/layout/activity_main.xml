<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibm.watson.WatsonHealthyEatCanada.MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="#8b1b15">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rootLayout"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#8b1b15"
        tools:context="com.ibm.watson.WatsonHealthyEatCanada.MainActivity$PlaceholderFragment"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_circle"
            android:layout_alignParentTop="true"
            android:src="@drawable/food_circle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rounded_corners"
            android:id="@+id/button1_background"
            android:layout_below="@+id/food_circle"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_question_button_text"
                android:id="@+id/main_menu_question_button"
                android:textColor="#C4FEFF"
                android:background="#657400"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="buttonOnClick" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rounded_corners"
            android:layout_below="@+id/button1_background"
            android:id="@+id/button2_background"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_browse_recipe_button_text"
                android:id="@+id/main_menu_browse_recipe_button"
                android:textColor="#C4FEFF"
                android:background="#657400"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="buttonOnClick" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rounded_corners"
            android:layout_below="@+id/button2_background"
            android:id="@+id/button3_background"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_create_recipe_button_text"
                android:id="@+id/main_menu_create_recipe_button"
                android:layout_below="@+id/main_menu_browse_recipe_button"
                android:textColor="#C4FEFF"
                android:background="#657400"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="buttonOnClick" />
           </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rounded_corners"
            android:layout_below="@+id/button3_background"
            android:id="@+id/button4_background"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_shopping_button_text"
                android:id="@+id/main_menu_shopping_button"
                android:layout_below="@+id/main_menu_create_recipe_button"
                android:textColor="#C4FEFF"
                android:background="#657400"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="buttonOnClick" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>

